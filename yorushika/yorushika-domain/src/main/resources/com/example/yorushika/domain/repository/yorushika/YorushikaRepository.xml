<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.yorushika.domain.repository.yorushika.YorushikaRepository">

    <!-- (2) -->
    <resultMap id="yorushikaResultMap" type="Yorushika">
        <id property="id" column="id" />
        <result property="title" column="title" />
    </resultMap>

    <!-- (3) -->
    <select id="findById" parameterType="String" resultMap="yorushikaResultMap">
    <![CDATA[
        SELECT
            id,
            title
        FROM
            yorushika_song
        WHERE
            id = #{id}
    ]]>
    </select>

    <!-- (4) -->
    <select id="findAll" resultMap="yorushikaResultMap">
    <![CDATA[
        SELECT
            id,
            title
        FROM
            yorushika_song
    ]]>
    </select>

    <!-- (5) -->
    <insert id="create" parameterType="Yorushika">
    <![CDATA[
        INSERT INTO yorushika_song
        (
            id,
            title
        )
        VALUES
        (
            #{id},
            #{title}
        )
    ]]>
    </insert>

    <!-- (6) -->
    <update id="update" parameterType="Yorushika">
    <![CDATA[
        UPDATE yorushika_song
        SET
            title = #{title}
        WHERE
            id = #{id}
    ]]>
    </update>

    <!-- (7) -->
    <delete id="delete" parameterType="Yorushika">
    <![CDATA[
        DELETE FROM
            yorushika_song
        WHERE
            id = #{id}
    ]]>
    </delete>

</mapper>